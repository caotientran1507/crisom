<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model #: "
                    android:textColor="@color/crisom_blue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/row_child_tvModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JS" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color: "
                    android:textColor="@color/crisom_blue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/row_child_tvColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JS" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ship Weight: "
                    android:textColor="@color/crisom_blue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/row_child_tvShipWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JS" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/row_child_lnExtension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extension: "
                    android:textColor="@color/crisom_blue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/row_child_tvExtension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JS" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textColor="@color/crisom_blue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/row_child_tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JS" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MSRP: "
                    android:textColor="@color/crisom_blue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/row_child_tvMSRP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JS" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:id="@+id/row_product_lnAddtocart"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="80"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:weightSum="100" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="56" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_to_cart_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <EditText
                        android:id="@+id/row_child_edtQuantityAddtocart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                    <LinearLayout
                        android:id="@+id/row_child_btnAddtoCart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="70"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="70" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="20" >

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ico_cart_color" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:text="Add to Cart"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="41" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/in_cart_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="In Cart"
                        android:textSize="10dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/row_child_tvInCart"
                            android:layout_width="wrap_content"                            
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>