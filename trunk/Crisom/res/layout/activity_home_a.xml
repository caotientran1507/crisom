<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crisom_white"
    android:orientation="vertical"
    android:weightSum="100" >

    <!-- Title Activity -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/crisom_red"
        android:gravity="center" >

        <TextView
            android:id="@+id/home_tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:textColor="@color/crisom_white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Content -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="83"
        android:orientation="vertical" >
        
        <fragment
            android:id="@+id/home_fragment"
            android:name="com.zdh.crisom.views.HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" /> -->

         <!-- <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFCCCCCC"
            android:padding="10dip"
            app:fillColor="#FF888888"
            app:pageColor="#88FF0000"
            app:radius="10dp"
            app:strokeColor="#FF000000"
            app:strokeWidth="2dp" />  -->
    </LinearLayout>

    <!-- Button bot -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/crisom_graybot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:background="@color/crisom_graybot"
        android:orientation="horizontal"
        android:weightSum="5" >

        <!-- Home Button -->

        <LinearLayout
            android:id="@+id/home_lnhome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_ivhome"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ico_home_active" />

            <TextView
                android:id="@+id/home_tvhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/crisom_red"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Cart button -->

        <LinearLayout
            android:id="@+id/home_lncategory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_ivcart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ico_category" />

            <TextView
                android:id="@+id/home_tvcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/crisom_grayitem"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Search button -->

        <LinearLayout
            android:id="@+id/home_lnsearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_ivsearch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ico_search" />

            <TextView
                android:id="@+id/home_tvsearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/crisom_grayitem"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Account button -->

        <LinearLayout
            android:id="@+id/home_lnaccount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_ivaccount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ico_account" />

            <TextView
                android:id="@+id/home_tvaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/crisom_grayitem"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- More button -->

        <LinearLayout
            android:id="@+id/home_lnmore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_ivmore"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ico_more" />

            <TextView
                android:id="@+id/home_tvmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textColor="@color/crisom_grayitem"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/crisom_graybot" />

</LinearLayout>