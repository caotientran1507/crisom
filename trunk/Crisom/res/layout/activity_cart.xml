<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crisom_white"
    android:orientation="vertical"
    android:weightSum="100" >

    <!-- Title Activity -->

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        layout="@layout/include_header_with_btn_back" />

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        layout="@layout/include_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="74"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:orientation="vertical"
            android:weightSum="74" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:background="#f1f1f1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:orientation="vertical"
                    android:weightSum="100" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/cart_tvThereIs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_normal"
                            android:text="There is " />

                        <TextView
                            android:id="@+id/cart_tvCountItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="@dimen/textsize_normal"
                            android:textColor="@color/crisom_red" />
                        
                        <TextView
                            android:id="@+id/cart_tvItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" item"
                            android:textSize="@dimen/textsize_normal"
                            android:textColor="@color/crisom_red"  />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_normal"
                            android:text=" in your cart " />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="25"
                        android:background="#d8d8d8"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_normal"
                            android:text="Cart SubTotal: " />

                        <TextView
                            android:id="@+id/cart_tvTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_normal"
                            android:text="$130.00" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="25"                        
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10" >

                        <Button
                            android:id="@+id/cart_btnCheckout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="Checkout" 
                            android:textColor="@color/crisom_white"
                            android:textSize="@dimen/textsize_normal"
                            android:background="@drawable/button_red_background"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- end linear 1 -->
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"/>
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:textStyle="bold"
                android:text="Recently added item(s)"/>
            
            <ListView 
                android:id="@+id/cart_lvItem"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="45"
                android:dividerHeight="5dp"
                android:divider="@android:color/transparent">
                
            </ListView>
            
        </LinearLayout>
    </LinearLayout>

    <!-- Button bot -->

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        layout="@layout/include_footer" />

</LinearLayout>