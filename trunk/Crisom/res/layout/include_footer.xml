<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crisom_graybot"
    android:orientation="horizontal"
    android:weightSum="5" >

    <!-- Home Button -->

    <LinearLayout
        android:id="@+id/home_lnhome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.97"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_ivhome"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ico_home_active" />
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.03"
        android:background="@color/crisom_graybackgroundvertical" />

    <!-- Cart button -->

    <LinearLayout
        android:id="@+id/home_lncategory"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.97"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_ivcart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ico_category" />
    </LinearLayout>

    <!-- Search button -->

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.03"
        android:background="@color/crisom_graybackgroundvertical" />

    <LinearLayout
        android:id="@+id/home_lnsearch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.97"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_ivsearch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ico_search" />
    </LinearLayout>

    <!-- Account button -->

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.03"
        android:background="@color/crisom_graybackgroundvertical" />

    <LinearLayout
        android:id="@+id/home_lnaccount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.97"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_ivaccount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ico_account" />
    </LinearLayout>

    <!-- More button -->

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.03"
        android:background="@color/crisom_graybackgroundvertical" />

    <LinearLayout
        android:id="@+id/home_lnmore"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.97"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_ivmore"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ico_more" />
    </LinearLayout>

</LinearLayout>