<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/linear_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="100" >

    <ImageView
        android:id="@+id/row_product_iv_avatar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="27"
        android:padding="10dp"
        android:src="@drawable/row_product_avatar" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#686868" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="62"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/row_product_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VW4600"
            android:textColor="@color/crisom_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_product_tv_des1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Wall Mount"
            android:textColor="@color/crisom_blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_product_tv_des2"            
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="110"
            android:text="Crimsonâ€™s best value in class VW4600 Video Wall Mount System features lateral, vertical, horizontal, and plumb adjustments. Includes an... "
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#686868" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:gravity="center" >

        <ImageView
            android:id="@+id/row_product_iv_next"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ico_next_blue" />
    </LinearLayout>

</LinearLayout>