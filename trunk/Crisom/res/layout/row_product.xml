<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_product_height"
    android:background="@drawable/linear_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/row_product_height_iv"
        android:layout_weight="30"
        android:gravity="center"
        android:padding="@dimen/padding_small" >

        <ImageView
            android:id="@+id/row_product_ivAvatar"
            android:layout_width="@dimen/row_product_height_width_iv"
            android:layout_height="@dimen/row_product_height_width_iv"
            android:scaleType="fitXY"
            android:src="@drawable/row_product_avatar" />
    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/crisom_gray_divider" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="59"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/row_product_tvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/row_product_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VW4600"
                android:textColor="@color/crisom_blue"
                android:textSize="@dimen/textsize_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_product_tvDes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="false"
                android:text="Video Wall Mount"
                android:textColor="@color/crisom_blue"
                android:textSize="@dimen/textsize_normal" />

            <TextView
                android:id="@+id/row_product_tvDes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:singleLine="false"
                android:text="Crimsonâ€™s best value in class VW4600 Video Wall Mount System features lateral, vertical, horizontal, and plumb adjustments. Includes an... "
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/row_product_tvDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/crisom_gray_divider" />

        <LinearLayout
            android:id="@+id/row_product_lnAddtocart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_product_height_iv_addtocart"
            android:layout_marginTop="@dimen/padding_small"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="100" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/addtocart" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_large"
                    android:text="Add to Cart"
                    android:textSize="@dimen/textsize_normal"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/productlist_message_cart_no_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="@string/productList_alert_no_login"
            android:textColor="@color/crisom_red"
            android:textSize="@dimen/textsize_normal"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/crisom_gray_divider" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:gravity="center" >

        <ImageView
            android:id="@+id/row_product_ivNext"
            android:layout_width="@dimen/include_footer_iv"
            android:layout_height="@dimen/include_footer_iv"
            android:src="@drawable/ico_next_blue" />
    </LinearLayout>

</LinearLayout>