<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11000000"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="100" >

    <!-- Title Activity -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:gravity="center"
        android:background="#00000000"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:background="@drawable/dialog_verifycardnumber_background"
            android:orientation="vertical"
            android:weightSum="100" >

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:gravity="right|center_vertical">
                
                <ImageView 
                    android:id="@+id/dialog_verifycardnumber_imgClose"
                    android:layout_width="@dimen/include_footer_iv"
	                android:layout_height="@dimen/include_footer_iv"
	                android:layout_margin="@dimen/padding"
	                android:src="@drawable/btn_window_close"/>
            </LinearLayout>
            
            
            <ImageView 
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="80"
                android:scaleType="fitXY"
                android:src="@drawable/cvv"/>
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>