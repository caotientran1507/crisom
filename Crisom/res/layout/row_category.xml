<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding"
    android:background="@drawable/change_color_background_item"
    android:paddingBottom="@dimen/padding"
    android:weightSum="100" >

    <TextView
        android:id="@+id/row_category_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="85"
        android:text="VIDEO WALL"
        android:textColor="@color/crisom_red"
        android:textSize="@dimen/row_category_tv"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:gravity="right" >

        <ImageView
            android:id="@+id/row_category_img"
            android:layout_width="@dimen/include_search_iv"
            android:layout_height="@dimen/include_search_iv"
            android:src="@drawable/ico_next_red" />
    </LinearLayout>

</LinearLayout>