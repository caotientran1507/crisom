<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crisom_red"
    android:orientation="horizontal"
    android:weightSum="100" >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:gravity="center" >

        <TextView
            android:id="@+id/include_header_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:textColor="@color/crisom_white"
            android:textSize="@dimen/include_header_with_btn_back_tv"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:gravity="center" >

        <Button
            android:id="@+id/include_header_btnLogin"
            android:layout_width="@dimen/include_header_with_btn_back_button_width"
            android:layout_height="@dimen/include_header_with_btn_back_button_height"            
            android:background="@drawable/login_background"
            android:text="Log In"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/crisom_white" />
    </LinearLayout>

</LinearLayout>